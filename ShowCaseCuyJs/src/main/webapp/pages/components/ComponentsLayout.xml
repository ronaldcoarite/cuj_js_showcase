<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    width="match_parent"
    height="match_parent"
    orientation="vertical">
    <LinearLayout
        width="match_parent"
        orientation="horizontal"
        background="#2E0000"
        padding="10px">
        <Button
            text="Cerrar"/>
    </LinearLayout>
    <LinearLayout
        orientation="horizontal"
        width="match_parent"
        height="match_parent"
        weight="1.0">
        <LinearLayout
            orientation="vertical"
            height="match_parent"
            background="#081D30"
            padding="5px">
            <TextView
                width="150px"
                height="50px"
                text="Views"
                background="pages/components/imgs/bg_level.9.png"/>
            <LinearLayout
                orientation="vertical"
                marginLeft="20px">
                <LinkButton
                    marginTop="20px"
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_textview.png"
                    marginBottom="5px"
                    text="TextView"
                    onClick="onClickTextView"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_button.png"
                    marginBottom="5px"
                    text="Button"
                    onClick="onClickButton"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_linkbutton.png"
                    marginBottom="5px"
                    text="LinkButton"
                    onClick="onClickLinkButton"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_edittext.png"
                    marginBottom="5px"
                    text="EditText"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_password.png"
                    marginBottom="5px"
                    text="Password"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_imageview.png"
                    marginBottom="5px"
                    text="ImageView"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_imagebutton.png"
                    marginBottom="5px"
                    text="ImageButton"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_spinner.png"
                    marginBottom="5px"
                    text="Spinner"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_checkbutton.png"
                    marginBottom="5px"
                    text="CheckBox"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/views/ic_camera.png"
                    marginBottom="5px"
                    text="Camera"/>
            </LinearLayout>
            <TextView
                marginTop="20px"
                width="150px"
                height="50px"
                text="Layouts"
                background="pages/components/imgs/bg_level.9.png"/>
            <LinearLayout
                orientation="vertical"
                marginLeft="20px"
                marginTop="20px">
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/layouts/ic_linearlayout.png"
                    marginBottom="5px"
                    text="LinearLayout"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/layouts/ic_framelayout.png"
                    marginBottom="5px"
                    text="FrameLayout"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/layouts/ic_gridlayout.png"
                    marginBottom="5px"
                    text="GridLayout"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/layouts/ic_flowlayout.png"
                    marginBottom="5px"
                    text="FlowLayout"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/layouts/ic_relative_layout.png"
                    marginBottom="5px"
                    text="RelativeLayout"/>
                <LinkButton
                    iconWidth="35px"
                    iconHeight="25px"
                    drawableLeft="pages/components/imgs/layouts/ic_scrollview.png"
                    marginBottom="5px"
                    text="ScrollView"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            id="fraContainer"
            width="match_parent"
            height="match_parent"
            background="#181818"
            padding="20px">
            
        </FrameLayout>
    </LinearLayout>
</LinearLayout>