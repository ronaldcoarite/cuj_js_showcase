<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    width="match_parent"
    height="match_parent"
    orientation="vertical">
    <LinearLayout
        width="match_parent"
        orientation="horizontal"
        background="#0E1824"
        padding="10px">
        <TextView
            iconWidth="60px"
            iconHeight="60px"
            drawableLeft="ic_logo.png"
            text="CuyJS"
            textSize="35px"
            singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        orientation="horizontal"
        width="match_parent"
        height="match_parent"
        weight="1.0">
        <ScrollView
            height="match_parent"
            background="#081D30"
            width="250px"
            padding="7px">
            <LinearLayout
                orientation="vertical"
                padding="5px">
                <TextView
                    height="50px"
                    text="Views"
                    width="190px"
                    background="pages/components/imgs/bg_level.9.png"/>
                <LinearLayout
                    orientation="vertical"
                    marginLeft="20px">
                    <LinkButton
                        marginTop="20px"
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_textview.png"
                        marginBottom="5px"
                        text="TextView"
                        onClick="onClickTextView"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_button.png"
                        marginBottom="5px"
                        text="Button"
                        onClick="onClickButton"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_linkbutton.png"
                        marginBottom="5px"
                        text="LinkButton"
                        onClick="onClickLinkButton"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_edittext.png"
                        marginBottom="5px"
                        text="EditText"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_password.png"
                        marginBottom="5px"
                        text="Password"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_imageview.png"
                        marginBottom="5px"
                        text="ImageView"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_imagebutton.png"
                        marginBottom="5px"
                        text="ImageButton"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_spinner.png"
                        marginBottom="5px"
                        text="Spinner"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_checkbutton.png"
                        marginBottom="5px"
                        text="CheckBox"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/views/ic_camera.png"
                        marginBottom="5px"
                        text="Camera"/>
                </LinearLayout>
                <TextView
                    marginTop="20px"
                    width="190px"
                    height="50px"
                    text="Layouts"
                    background="pages/components/imgs/bg_level.9.png"/>
                <LinearLayout
                    orientation="vertical"
                    marginLeft="20px"
                    marginTop="20px">
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/layouts/ic_linearlayout.png"
                        marginBottom="5px"
                        text="LinearLayout"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/layouts/ic_framelayout.png"
                        marginBottom="5px"
                        text="FrameLayout"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/layouts/ic_gridlayout.png"
                        marginBottom="5px"
                        text="GridLayout"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/layouts/ic_flowlayout.png"
                        marginBottom="5px"
                        text="FlowLayout"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/layouts/ic_relative_layout.png"
                        marginBottom="5px"
                        text="RelativeLayout"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/layouts/ic_scrollview.png"
                        marginBottom="5px"
                        text="ScrollView"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/layouts/ic_formlayout.png"
                        marginBottom="5px"
                        text="FormLayout"/>
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/layouts/ic_radiogroup.png"
                        marginBottom="5px"
                        text="RadioGroup"/>
                </LinearLayout>
                <TextView
                    marginTop="20px"
                    width="190px"
                    height="50px"
                    text="Contenedores"
                    singleLine="true"
                    background="pages/components/imgs/bg_level.9.png"/>
                <LinearLayout
                    orientation="vertical"
                    marginLeft="20px"
                    marginTop="20px">
                    <LinkButton
                        iconWidth="35px"
                        iconHeight="25px"
                        drawableLeft="pages/components/imgs/ux/ic_dialog.png"
                        marginBottom="5px"
                        text="Dialog"
                        onClick="onClickDialog"/>
                </LinearLayout>
                <TextView
                    marginTop="20px"
                    width="190px"
                    height="50px"
                    text="Recursos"
                    singleLine="true"
                    background="pages/components/imgs/bg_level.9.png"/>
                <LinearLayout
                    orientation="vertical"
                    marginLeft="20px"
                    marginTop="20px">
                    <LinkButton
                        marginBottom="5px"
                        text="Resource"
                        onClick="onClickDialog"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <ScrollView
            height="match_parent"
            width="match_parent"
            background="#181818"
            padding="7px"
            weight="1.0">
            <FrameLayout
                id="fraContainer"
                width="match_parent"
                padding="20px">
            </FrameLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>